<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImageSelectPage"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imagePreviewIvAtISP"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x360"
        android:scaleType="fitXY"
        android:src="@drawable/plus" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/noOfColumnRlAtISP"
        android:visibility="gone">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_arrow_back_black_24dp"
            android:padding="@dimen/x16"
            android:layout_marginLeft="@dimen/x16"
            android:layout_marginTop="@dimen/x16"
            android:id="@+id/backArrowISP" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/useless3"
            android:text="Enter No of Column You Need "
            android:layout_below="@id/backArrowISP"
            android:textColor="@color/lightBlack"
            android:layout_marginTop="@dimen/x24"
            android:layout_marginLeft="@dimen/x24"
            android:textSize="@dimen/xs22"/>

        <EditText
            android:id="@+id/nFCAEttISP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/grey"
            android:textColor="@color/black"
            android:hint="Ex : 4 / 5 / 2"
            android:textAlignment="center"
            android:singleLine="true"
            android:backgroundTint="@color/black"
            android:layout_marginRight="@dimen/x16"
            android:layout_marginTop="@dimen/x22"
            android:layout_marginLeft="24dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_below="@id/useless3"/>

    </RelativeLayout>


    <ImageButton
        android:id="@+id/imageSelectDoneAtISP"
        android:layout_width="@dimen/x55"
        android:layout_height="@dimen/x55"
        android:padding="@dimen/x12"
        android:src="@drawable/ic_arrow_forward_black_24dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/circleback"
        android:layout_marginRight="@dimen/x22"
        android:scaleType="centerCrop"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/x32"/>

</RelativeLayout>