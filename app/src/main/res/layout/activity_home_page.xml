<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomePage"
    android:background="@drawable/homepage_bg">

    <LinearLayout
        android:id="@+id/useless2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x48"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/x12">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/team_name"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-condensed"
            android:textSize="@dimen/xs26"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_settings_white_24dp"
            android:layout_marginRight="@dimen/x16"/>
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x360"
        android:elevation="@dimen/x8"
        app:cardElevation="@dimen/x4"
        android:layout_marginLeft="@dimen/x22"
        android:layout_marginRight="@dimen/x22"
        android:layout_marginBottom="@dimen/x32"
        android:layout_alignParentBottom="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/x12"
            android:paddingRight="@dimen/x12">

            <TextView
                android:id="@+id/useless1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x22"
                android:layout_marginTop="@dimen/x8"
                android:text="Data Entry from Images Made Easy"
                android:gravity="center"
                android:textStyle="normal"
                android:fontFamily="cursive"
                android:textColor="@color/black"
                android:paddingTop="@dimen/x16"
                android:paddingBottom="@dimen/x16"
                android:background="@color/light_grey"
                android:paddingLeft="@dimen/x4"
                android:paddingRight="@dimen/x4"
                android:textSize="@dimen/xs16"
                android:layout_centerInParent="true"/>

            <Button
                android:id="@+id/startBtnAtHP"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x48"
                android:layout_marginBottom="@dimen/x16"
                android:text="@string/start"
                android:elevation="@dimen/x8"
                android:layout_gravity="bottom"
                android:background="@drawable/homepage_bg"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-condensed"
                android:textSize="@dimen/x22"
                android:textAllCaps="false"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x220"
        android:elevation="@dimen/x12"
        app:cardElevation="@dimen/x8"
        android:layout_marginLeft="@dimen/x48"
        android:layout_marginRight="@dimen/x48"
        android:layout_marginBottom="@dimen/x32"
        android:layout_marginTop="@dimen/x32"
        android:layout_below="@id/useless2">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/ic_control_point_duplicate_black_24dp"/>

    </android.support.v7.widget.CardView>

</RelativeLayout>