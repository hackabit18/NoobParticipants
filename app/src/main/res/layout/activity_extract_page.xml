<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExtractPage">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewAtEP"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/selectALlImageIv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x360"
        android:src="@drawable/plus"
        android:scaleType="fitXY"/>

    <ImageButton
        android:id="@+id/doneBtnAtEP"
        android:layout_width="@dimen/x55"
        android:layout_height="@dimen/x55"
        android:padding="@dimen/x12"
        android:src="@drawable/ic_done_black_24dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/circleback"
        android:layout_marginRight="@dimen/x22"
        android:scaleType="centerCrop"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/x32"/>

</RelativeLayout>