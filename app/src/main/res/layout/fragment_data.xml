<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.DataFragment">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_arrow_back_black_24dp"
        android:padding="@dimen/x16"
        android:layout_marginLeft="@dimen/x16"
        android:layout_marginTop="@dimen/x16"
        android:id="@+id/backArrowISP" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/useless3"
        android:text="Select All Desired Data : "
        android:layout_below="@id/backArrowISP"
        android:textColor="@color/lightBlack"
        android:layout_marginTop="@dimen/x24"
        android:layout_marginLeft="@dimen/x24"
        android:textSize="@dimen/xs22"/>

   <android.support.v7.widget.RecyclerView
       android:id="@+id/dataRvAtFD"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_marginTop="@dimen/x16"
       android:layout_below="@id/useless3"/>


   <ImageButton
       android:id="@+id/nextBtnAtDF"
       android:layout_width="@dimen/x55"
       android:layout_height="@dimen/x55"
       android:padding="@dimen/x12"
       android:src="@drawable/ic_arrow_forward_black_24dp"
       android:layout_alignParentRight="true"
       android:background="@drawable/circleback"
       android:layout_marginRight="@dimen/x22"
       android:scaleType="centerCrop"
       android:layout_alignParentBottom="true"
       android:layout_marginBottom="@dimen/x32"/>

</RelativeLayout>